# Backend Environment Variables for SIH25027 Prototype  
# Prototype proudly built by Team Hackon

# Server Configuration
NODE_ENV=development
PORT=5000
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,csv

# Blockchain Simulation
SIMULATE_BLOCKCHAIN=true
LEDGER_FILE_PATH=./data/ledger.json
ENABLE_TRANSACTION_LOGS=true

# Security
JWT_SECRET=your_jwt_secret_here_for_production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_CONSOLE_LOGS=true

